        <ImageView
            android:id="@+id/sq2"
            android:layout_width="80dp"
            android:layout_height="75dp"
            android:layout_marginLeft="4dp"
            android:background="#000000"
            android:onClick="ss"
            app:layout_column="1"
            app:layout_row="0"
